# Entity Extraction PoC - Environment Variables

# =============================================================================
# LLM API Configuration
# =============================================================================

# OpenRouter API (for cloud LLM testing)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI API (alternative cloud provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Claude API (alternative cloud provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Local LLM Configuration
# =============================================================================

# Ollama Configuration (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Alternative local LLM endpoints
# LOCAL_LLM_BASE_URL=http://localhost:1234/v1  # For LM Studio
# LOCAL_LLM_BASE_URL=http://localhost:5000/v1  # For text-generation-webui

# =============================================================================
# Model Selection
# =============================================================================

# Primary models for different tasks
ENTITY_EXTRACTION_MODEL_LOCAL=llama3.1:8b
ENTITY_EXTRACTION_MODEL_CLOUD=anthropic/claude-3.5-sonnet
CONTEXT_GENERATION_MODEL=anthropic/claude-3.5-sonnet
EVALUATION_MODEL=gpt-4

# =============================================================================
# Performance & Cost Configuration
# =============================================================================

# API rate limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=5

# Cost tracking
COST_TRACKING_ENABLED=true
DAILY_COST_LIMIT=10.00
MONTHLY_COST_LIMIT=100.00

# Performance monitoring
PERFORMANCE_LOGGING_ENABLED=true
SLOW_REQUEST_THRESHOLD_MS=5000

# =============================================================================
# Data Configuration
# =============================================================================

# Test data paths
INPUT_DATA_PATH=./data/input
GROUND_TRUTH_PATH=./data/ground-truth
OUTPUT_DATA_PATH=./data/output

# Sample data for testing
SAMPLE_CONVERSATIONS_FILE=construction-conversations/sample-conversations.txt
SAMPLE_EMAILS_FILE=email-threads/contractor-emails.txt
SAMPLE_NOTES_FILE=meeting-notes/project-notes.md

# =============================================================================
# Evaluation Configuration
# =============================================================================

# Evaluation settings
MIN_ACCURACY_THRESHOLD=0.80
TARGET_ACCURACY_THRESHOLD=0.90
EVALUATION_SAMPLE_SIZE=50

# Ground truth validation
MANUAL_VALIDATION_REQUIRED=true
INTER_ANNOTATOR_AGREEMENT_THRESHOLD=0.85

# =============================================================================
# DiffMem Integration (Mock)
# =============================================================================

# Mock DiffMem configuration
DIFFMEM_REPO_PATH=./data/mock-diffmem
DIFFMEM_USER_ID=rob_foree
DIFFMEM_AUTO_COMMIT=false

# Real DiffMem integration (for future use)
# DIFFMEM_PYTHON_PATH=/usr/bin/python3
# DIFFMEM_SCRIPT_PATH=../DiffMem/src/diffmem/api.py
# DIFFMEM_REAL_REPO_PATH=/path/to/real/diffmem/repo

# =============================================================================
# Logging & Debugging
# =============================================================================

# Log levels: error, warn, info, debug, trace
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/poc.log

# Debug settings
DEBUG_ENTITY_EXTRACTION=false
DEBUG_DIFFMEM_INTEGRATION=false
DEBUG_PERFORMANCE=true

# Verbose output for development
VERBOSE_PROMPTS=false
VERBOSE_RESPONSES=false
VERBOSE_EVALUATION=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Test execution settings
RUN_ACCURACY_TESTS=true
RUN_PERFORMANCE_TESTS=true
RUN_COST_TESTS=true
RUN_INTEGRATION_TESTS=true

# Test data generation
GENERATE_SYNTHETIC_DATA=false
SYNTHETIC_DATA_COUNT=100

# Continuous testing
WATCH_MODE=false
AUTO_RERUN_ON_CHANGE=false

# =============================================================================
# Development Settings
# =============================================================================

# Development mode settings
NODE_ENV=development
DEVELOPMENT_MODE=true

# Hot reloading
HOT_RELOAD_ENABLED=true
WATCH_FILE_CHANGES=true

# Cache settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
CLEAR_CACHE_ON_START=false

# =============================================================================
# Integration with Main System
# =============================================================================

# Links to main twilio-listener system
MAIN_SYSTEM_PATH=../twilio-listener
CONVERSATION_DATA_PATH=../twilio-listener/conversations
SMS_LOGS_PATH=../twilio-listener/logs

# Integration testing
TEST_WITH_REAL_SMS_DATA=false
IMPORT_EXISTING_CONVERSATIONS=true

# =============================================================================
# Notification & Monitoring
# =============================================================================

# Notification settings (for long-running tests)
NOTIFY_ON_COMPLETION=false
NOTIFICATION_EMAIL=your_email@example.com
NOTIFICATION_WEBHOOK=https://your-webhook-url.com

# Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3001
METRICS_COLLECTION_ENABLED=true

# =============================================================================
# Security & Privacy
# =============================================================================

# Data privacy
ANONYMIZE_PERSONAL_DATA=true
REDACT_PHONE_NUMBERS=true
REDACT_ADDRESSES=true

# API security
REQUIRE_API_KEY=false
API_KEY=your_api_key_here

# Data retention
AUTO_DELETE_LOGS_DAYS=30
AUTO_DELETE_TEST_DATA_DAYS=7

# =============================================================================
# Experimental Features
# =============================================================================

# Experimental entity types
ENABLE_EXPERIMENTAL_ENTITIES=false
ENABLE_RELATIONSHIP_EXTRACTION=true
ENABLE_SENTIMENT_ANALYSIS=false

# Advanced features
ENABLE_MULTI_LANGUAGE=false
ENABLE_VOICE_TRANSCRIPTION=false
ENABLE_IMAGE_ANALYSIS=false

# =============================================================================
# Backup & Recovery
# =============================================================================

# Backup settings
AUTO_BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# Recovery settings
ENABLE_CRASH_RECOVERY=true
SAVE_STATE_INTERVAL_MINUTES=5
